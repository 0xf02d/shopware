<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Category\Factory\CategoryBasicFactory" id="shopware.category.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
            <argument id="shopware.seo_url.basic_factory" type="service"/>
        </service>

        <service class="Shopware\Category\Factory\CategoryDetailFactory" id="shopware.category.detail_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
            <argument id="shopware.product_stream.basic_factory" type="service"/>
            <argument id="shopware.media.basic_factory" type="service"/>
            <argument id="shopware.product.basic_factory" type="service"/>
            <argument id="shopware.customer_group.basic_factory" type="service"/>
            <argument id="shopware.seo_url.basic_factory" type="service"/>
        </service>


        <service class="Shopware\Category\Controller\CategoryController" id="shopware.category.api_controller">
            <argument id="shopware.category.repository" type="service"/>
        </service>
        

        <service class="Shopware\Category\Writer\CategoryWriter" id="shopware.category.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\Category\Reader\CategoryBasicReader" id="shopware.category.basic_reader">
            <argument id="shopware.category.basic_factory" type="service"/>
        </service>

        <service class="Shopware\Category\Reader\CategoryDetailReader" id="shopware.category.detail_reader">
            <argument id="shopware.category.detail_factory" type="service"/>
            <argument id="shopware.product.basic_reader" type="service"/>
            <argument id="shopware.customer_group.basic_reader" type="service"/>
        </service>

        <service class="Shopware\Category\Searcher\CategorySearcher" id="shopware.category.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.category.detail_factory" type="service"/>
            <argument id="shopware.category.basic_reader" type="service"/>
        </service>

        <service class="Shopware\Category\Repository\CategoryRepository" id="shopware.category.repository">
            <argument id="shopware.category.detail_reader" type="service"/>
            <argument id="shopware.category.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.category.searcher" type="service"/>
            <argument id="shopware.category.writer" type="service"/>
            <tag name="shopware.repository" />
        </service>

    </services>
</container>
