<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\ListingSorting\Factory\ListingSortingBasicFactory" id="shopware.listing_sorting.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>


        <service class="Shopware\ListingSorting\Controller\ListingSortingController" id="shopware.listing_sorting.api_controller">
            <argument id="shopware.listing_sorting.repository" type="service"/>
        </service>
        

        <service class="Shopware\ListingSorting\Writer\ListingSortingWriter" id="shopware.listing_sorting.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\ListingSorting\Reader\ListingSortingBasicReader" id="shopware.listing_sorting.basic_reader">
            <argument id="shopware.listing_sorting.basic_factory" type="service"/>
        </service>

        <service class="Shopware\ListingSorting\Searcher\ListingSortingSearcher" id="shopware.listing_sorting.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.listing_sorting.basic_factory" type="service"/>
            <argument id="shopware.listing_sorting.basic_reader" type="service"/>
        </service>

        <service class="Shopware\ListingSorting\Repository\ListingSortingRepository" id="shopware.listing_sorting.repository">
            <argument id="shopware.listing_sorting.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.listing_sorting.searcher" type="service"/>
            <argument id="shopware.listing_sorting.writer" type="service"/>
            <tag name="shopware.repository" />
        </service>

    </services>
</container>
