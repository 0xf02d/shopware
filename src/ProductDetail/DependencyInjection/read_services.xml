<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\ProductDetail\Factory\ProductDetailBasicFactory" id="shopware.product_detail.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection" />
            <argument id="shopware.unit.basic_factory" type="service"/>
        </service>

        <service class="Shopware\ProductDetail\Factory\ProductDetailDetailFactory" id="shopware.product_detail.detail_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection" />
            <argument id="shopware.product_price.basic_factory" type="service"/>
            <argument id="shopware.unit.basic_factory" type="service"/>
        </service>

        <service class="Shopware\ProductDetail\Loader\ProductDetailBasicLoader" id="shopware.product_detail.basic_loader">
            <argument id="shopware.product_detail.basic_factory" type="service"/>
        </service>

        <service class="Shopware\ProductDetail\Loader\ProductDetailDetailLoader" id="shopware.product_detail.detail_loader">
            <argument id="shopware.product_detail.detail_factory" type="service"/>
            <argument id="shopware.product_price.searcher" type="service"/>
        </service>

        <service class="Shopware\ProductDetail\Searcher\ProductDetailSearcher" id="shopware.product_detail.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.product_detail.detail_factory" type="service"/>
            <argument id="shopware.product_detail.basic_loader" type="service"/>
        </service>

        <service class="Shopware\ProductDetail\Repository\ProductDetailRepository" id="shopware.product_detail.repository">
            <argument id="shopware.product_detail.detail_loader" type="service"/>
            <argument id="shopware.product_detail.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.product_detail.searcher" type="service"/>
        </service>

    </services>
</container>