<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Tax\Factory\TaxBasicFactory" id="shopware.tax.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection" />
        </service>

        <service class="Shopware\Tax\Controller\TaxController" id="shopware.tax.api_controller">
            <argument id="shopware.tax.repository" type="service"/>
        </service>

        <service class="Shopware\Tax\Writer\TaxWriter" id="shopware.tax.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\Tax\Loader\TaxBasicLoader" id="shopware.tax.basic_loader">
            <argument id="shopware.tax.basic_factory" type="service"/>
        </service>

        <service class="Shopware\Tax\Searcher\TaxSearcher" id="shopware.tax.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.tax.basic_factory" type="service"/>
            <argument id="shopware.tax.basic_loader" type="service"/>
        </service>

        <service class="Shopware\Tax\Repository\TaxRepository" id="shopware.tax.repository">
            <argument id="shopware.tax.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.tax.searcher" type="service"/>
            <argument id="shopware.tax.writer" type="service"/>
        </service>

    </services>
</container>