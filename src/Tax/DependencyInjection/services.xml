<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Tax\Struct\TaxHydrator" id="shopware.tax.struct.tax_hydrator"/>
        <service class="Shopware\Tax\Gateway\TaxReader" id="shopware.tax.gateway.tax_reader">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.framework.struct.field_helper" type="service"/>
            <argument id="shopware.tax.struct.tax_hydrator" type="service"/>
        </service>
        <service class="Shopware\Tax\Gateway\TaxRepository" id="shopware.tax.gateway.tax_repository">
            <argument id="shopware.tax.gateway.tax_reader" type="service"/>
        </service>

    </services>
</container>