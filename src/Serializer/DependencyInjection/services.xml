<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Serializer\SerializerRegistry" id="shopware.serializer.serializer_registry">
            <argument type="collection">
                <argument type="service" id="shopware.serializer.array_serializer" />
                <argument type="service" id="shopware.serializer.json_serializer" />
            </argument>
        </service>

        <service class="Shopware\Serializer\ObjectDeserializer" id="shopware.serializer.object_deserializer"/>

        <service class="Shopware\Serializer\ArraySerializer" id="shopware.serializer.array_serializer">
            <argument id="shopware.serializer.object_deserializer" type="service"/>
        </service>

        <service class="Shopware\Serializer\JsonSerializer" id="shopware.serializer.json_serializer">
            <argument id="shopware.serializer.object_deserializer" type="service"/>
        </service>

    </services>
</container>