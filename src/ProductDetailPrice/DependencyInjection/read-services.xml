<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\ProductDetailPrice\Factory\ProductDetailPriceBasicFactory" id="shopware.product_detail_price.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>


        <service class="Shopware\ProductDetailPrice\Controller\ProductDetailPriceController" id="shopware.product_detail_price.api_controller">
            <argument id="shopware.product_detail_price.repository" type="service"/>
        </service>
        

        <service class="Shopware\ProductDetailPrice\Writer\ProductDetailPriceWriter" id="shopware.product_detail_price.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\ProductDetailPrice\Loader\ProductDetailPriceBasicLoader" id="shopware.product_detail_price.basic_loader">
            <argument id="shopware.product_detail_price.basic_factory" type="service"/>
        </service>

        <service class="Shopware\ProductDetailPrice\Searcher\ProductDetailPriceSearcher" id="shopware.product_detail_price.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.product_detail_price.basic_factory" type="service"/>
            <argument id="shopware.product_detail_price.basic_loader" type="service"/>
        </service>

        <service class="Shopware\ProductDetailPrice\Repository\ProductDetailPriceRepository" id="shopware.product_detail_price.repository">
            <argument id="shopware.product_detail_price.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.product_detail_price.searcher" type="service"/>
            <argument id="shopware.product_detail_price.writer" type="service"/>
        </service>

    </services>
</container>
