<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\CustomerAddress\Reader\CustomerAddressBasicHydrator"
                 id="shopware.customer_address.reader.basic_hydrator">
            <argument type="service" id="shopware.area_country.reader.basic_hydrator"/>
            <argument type="service" id="shopware.area_country_state.reader.basic_hydrator"/>
        </service>

        <service class="Shopware\CustomerAddress\Reader\CustomerAddressBasicReader"
                 id="shopware.customer_address.reader.basic_reader">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.customer_address.reader.basic_hydrator" type="service"/>
        </service>

        <service class="Shopware\CustomerAddress\Loader\CustomerAddressBasicLoader"
                 id="shopware.customer_address.loader.basic_loader">
            <argument type="service" id="shopware.customer_address.reader.basic_reader"/>

        </service>

        <service class="Shopware\CustomerAddress\Searcher\CustomerAddressSearcher"
                 id="shopware.customer_address.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection">
                <argument id="shopware.customer_address.searcher.handler.area_country_uuid_handler" type="service"/>
                <argument id="shopware.customer_address.searcher.handler.area_country_state_uuid_handler"
                          type="service"/>
                <argument id="shopware.customer_address.searcher.handler.customer_uuid_handler" type="service"/>
            </argument>
            <argument id="shopware.customer_address.reader.basic_hydrator" type="service"/>
        </service>

        <service class="Shopware\CustomerAddress\Writer\CustomerAddressWriter"
                 id="shopware.customer_address.writer.writer"/>

        <service class="Shopware\CustomerAddress\CustomerAddressRepository" id="shopware.customer_address.repository">
            <argument id="shopware.customer_address.loader.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.customer_address.searcher" type="service"/>
            <argument id="shopware.customer_address.writer.writer" type="service"/>

        </service>

        <service class="Shopware\CustomerAddress\Searcher\Handler\AreaCountryUuidHandler"
                 id="shopware.customer_address.searcher.handler.area_country_uuid_handler"/>
        <service class="Shopware\CustomerAddress\Searcher\Handler\AreaCountryStateUuidHandler"
                 id="shopware.customer_address.searcher.handler.area_country_state_uuid_handler"/>
        <service class="Shopware\CustomerAddress\Searcher\Handler\CustomerUuidHandler"
                 id="shopware.customer_address.searcher.handler.customer_uuid_handler"/>
    </services>
</container>