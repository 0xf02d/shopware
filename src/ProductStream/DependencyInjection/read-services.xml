<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\ProductStream\Factory\ProductStreamBasicFactory" id="shopware.product_stream.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
            <argument id="shopware.listing_sorting.basic_factory" type="service"/>
        </service>


        <service class="Shopware\ProductStream\Controller\ProductStreamController" id="shopware.product_stream.api_controller">
            <argument id="shopware.product_stream.repository" type="service"/>
        </service>
        

        <service class="Shopware\ProductStream\Writer\ProductStreamWriter" id="shopware.product_stream.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\ProductStream\Reader\ProductStreamBasicReader" id="shopware.product_stream.basic_reader">
            <argument id="shopware.product_stream.basic_factory" type="service"/>
        </service>

        <service class="Shopware\ProductStream\Searcher\ProductStreamSearcher" id="shopware.product_stream.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.product_stream.basic_factory" type="service"/>
            <argument id="shopware.product_stream.basic_reader" type="service"/>
        </service>

        <service class="Shopware\ProductStream\Repository\ProductStreamRepository" id="shopware.product_stream.repository">
            <argument id="shopware.product_stream.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.product_stream.searcher" type="service"/>
            <argument id="shopware.product_stream.writer" type="service"/>
            <tag name="shopware.repository" />
        </service>

    </services>
</container>
