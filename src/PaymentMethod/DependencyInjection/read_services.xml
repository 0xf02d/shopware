<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\PaymentMethod\Factory\PaymentMethodBasicFactory" id="shopware.payment_method.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection" />
        </service>

        <service class="Shopware\PaymentMethod\Factory\PaymentMethodDetailFactory" id="shopware.payment_method.detail_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection" />
            <argument id="shopware.shop.basic_factory" type="service"/>
            <argument id="shopware.area_country.basic_factory" type="service"/>
        </service>

        <service class="Shopware\PaymentMethod\Loader\PaymentMethodBasicLoader" id="shopware.payment_method.basic_loader">
            <argument id="shopware.payment_method.basic_factory" type="service"/>
        </service>

        <service class="Shopware\PaymentMethod\Loader\PaymentMethodDetailLoader" id="shopware.payment_method.detail_loader">
            <argument id="shopware.payment_method.detail_factory" type="service"/>
            <argument id="shopware.shop.basic_loader" type="service"/>
            <argument id="shopware.area_country.basic_loader" type="service"/>
        </service>

        <service class="Shopware\PaymentMethod\Searcher\PaymentMethodSearcher" id="shopware.payment_method.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.payment_method.detail_factory" type="service"/>
            <argument id="shopware.payment_method.basic_loader" type="service"/>
        </service>

        <service class="Shopware\PaymentMethod\Repository\PaymentMethodRepository" id="shopware.payment_method.repository">
            <argument id="shopware.payment_method.detail_loader" type="service"/>
            <argument id="shopware.payment_method.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.payment_method.searcher" type="service"/>
        </service>

    </services>
</container>