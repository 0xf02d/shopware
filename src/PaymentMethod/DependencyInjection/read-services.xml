<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\PaymentMethod\Factory\PaymentMethodBasicFactory" id="shopware.payment_method.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>

        <service class="Shopware\PaymentMethod\Factory\PaymentMethodDetailFactory" id="shopware.payment_method.detail_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
            <argument id="shopware.shop.basic_factory" type="service"/>
            <argument id="shopware.area_country.basic_factory" type="service"/>
        </service>


        <service class="Shopware\PaymentMethod\Controller\PaymentMethodController" id="shopware.payment_method.api_controller">
            <argument id="shopware.payment_method.repository" type="service"/>
        </service>
        

        <service class="Shopware\PaymentMethod\Writer\PaymentMethodWriter" id="shopware.payment_method.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\PaymentMethod\Reader\PaymentMethodBasicReader" id="shopware.payment_method.basic_reader">
            <argument id="shopware.payment_method.basic_factory" type="service"/>
        </service>

        <service class="Shopware\PaymentMethod\Reader\PaymentMethodDetailReader" id="shopware.payment_method.detail_reader">
            <argument id="shopware.payment_method.detail_factory" type="service"/>
            <argument id="shopware.shop.basic_reader" type="service"/>
            <argument id="shopware.area_country.basic_reader" type="service"/>
        </service>

        <service class="Shopware\PaymentMethod\Searcher\PaymentMethodSearcher" id="shopware.payment_method.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.payment_method.detail_factory" type="service"/>
            <argument id="shopware.payment_method.basic_reader" type="service"/>
        </service>

        <service class="Shopware\PaymentMethod\Repository\PaymentMethodRepository" id="shopware.payment_method.repository">
            <argument id="shopware.payment_method.detail_reader" type="service"/>
            <argument id="shopware.payment_method.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.payment_method.searcher" type="service"/>
            <argument id="shopware.payment_method.writer" type="service"/>
        </service>

    </services>
</container>
