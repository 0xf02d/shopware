<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Media\Factory\MediaBasicFactory" id="shopware.media.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
            <argument id="shopware.album.basic_factory" type="service"/>
        </service>


        <service class="Shopware\Media\Controller\MediaController" id="shopware.media.api_controller">
            <argument id="shopware.media.repository" type="service"/>
        </service>
        

        <service class="Shopware\Media\Writer\MediaWriter" id="shopware.media.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\Media\Reader\MediaBasicReader" id="shopware.media.basic_reader">
            <argument id="shopware.media.basic_factory" type="service"/>
        </service>

        <service class="Shopware\Media\Searcher\MediaSearcher" id="shopware.media.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.media.basic_factory" type="service"/>
            <argument id="shopware.media.basic_reader" type="service"/>
        </service>

        <service class="Shopware\Media\Repository\MediaRepository" id="shopware.media.repository">
            <argument id="shopware.media.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.media.searcher" type="service"/>
            <argument id="shopware.media.writer" type="service"/>
        </service>

    </services>
</container>
