
{#<div class="table--tr block-group row--rebate{if $isLast} is--last-row{/if}">#}
<div class="table--tr block-group row--rebate">
    {# @var viewLineItem \Shopware\CartBridge\View\ViewLineItemInterface #}

    {# Product information column #}
    {% block frontend_checkout_cart_item_rebate_name %}
    <div class="table--column column--product block">

        {# Badge #}
        {% block frontend_checkout_cart_item_rebate_badge %}
        <div class="panel--td column--image">
            <div class="table--media">
                <div class="basket--badge">
                    {% if viewLineItem.calculatedLineItem.price.totalPrice >= 0 %}
                        <i class="icon--arrow-right"></i>
                    {% else %}
                        <i class="icon--percent2"></i>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endblock %}

        {#Product information#}
        {% block frontend_checkout_cart_item_rebate_details %}
            <div class="panel--td table--content">

                {#Product name#}
                {% block frontend_checkout_cart_item_rebate_details_title %}

                    {#<span class="content--title">{{ viewLineItem.label|striptags|truncate(60) }}</span>#}
                    <span class="content--title">{{ viewLineItem.label|striptags|slice(0, 60) }}</span>
                {% endblock %}
    
                {#Additional product information#}
                {% block frontend_checkout_cart_item_rebate_details_inline %}{% endblock %}
            </div>
        {% endblock %}
    </div>
    {% endblock %}

    {#Product tax rate#}
    {% block frontend_checkout_cart_item_rebate_tax_price %}{% endblock %}

    {#Accumulated product price#}
    {% block frontend_checkout_cart_item_rebate_total_sum %}
        <div class="panel--td table--column column--total-price block is--align-right">
            {% block frontend_checkout_cart_item_rebate_total_sum_label %}
                <div class="column--label total-price--label">
                    {% trans from "frontend/checkout/cart_header" %}CartColumnTotal{% endtrans %}
                </div>
            {% endblock %}

            {% block frontend_checkout_cart_item_rebate_total_sum_display %}
                {{ viewLineItem.calculatedLineItem.price.totalPrice|localizedcurrency(context.currency.shortName) }}
                {% block frontend_checkout_cart_tax_symbol %}
                    {% trans from "frontend/listing/box_article" %}Star{% endtrans %}
                {% endblock %}
            {% endblock %}
        </div>
    {% endblock %}
</div>
