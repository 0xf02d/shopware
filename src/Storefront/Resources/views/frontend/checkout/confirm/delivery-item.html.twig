{% sw_extends "frontend/checkout/cart/cart-item.html.twig" %}

{# @var viewLineItem \Shopware\CartBridge\View\ViewLineItemInterface #}
{% block frontend_checkout_cart_item_quantity_selection %}
    {{ viewLineItem.calculatedLineItem.quantity }}
{% endblock %}

{% block frontend_checkout_cart_item_tax_price %}
    <div class="panel--td column--tax-price block is--align-right">
        {% block frontend_checkout_cart_item_tax_label %}
            <div class="column--label tax-price--label">
                {#{if $sUserData.additional.charge_vat && !$sUserData.additional.show_net}#}
                {% trans from "frontend/checkout/confirm_header" %}CheckoutColumnExcludeTax{% endtrans %}
                {#{elseif $sUserData.additional.charge_vat}#}
                {#{% trans from "frontend/checkout/confirm_header" %}CheckoutColumnTax{% endtrans %}#}
                {/if}
            </div>
        {% endblock %}

        {#{% if $sUserData.additional.charge_vat %}#}
        {{ viewLineItem.calculatedLineItem.price.calculatedTaxes.amount|localizedcurrency(context.currency.shortName) }}
        {#{% else %}&nbsp;{% endif }#}
    </div>
{% endblock %}

