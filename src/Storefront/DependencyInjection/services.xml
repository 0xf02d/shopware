<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="assetic.filter.lessphp.class">Shopware\Storefront\Theme\LessphpFilter</parameter>
    </parameters>

    <services>

        <service id="shopware.storefront.twig.template_data_extension" class="Shopware\Storefront\Twig\TemplateDataExtension">
            <tag name="twig.extension" />

            <argument type="service" id="translator" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="shopware.config.config_service" />
            <argument type="service" id="shopware.storefront.component.site_page_menu" />
            <argument type="service" id="dbal_connection" />
            <argument type="service" id="shopware.storefront.component.theme.config_reader" />
            <argument type="service" id="shopware.category.gateway.category_repository" />
            <argument type="service" id="shopware.serializer.serializer_registry" />
        </service>

        <service id="shopware.storefront.component.site_page_menu" class="Shopware\Storefront\Component\SitePageMenu">
            <argument type="service" id="dbal_connection" />
            <argument type="service" id="shopware.router" />
        </service>

        <!-- Twig / Theme -->
        <service id="shopware.storefront.component.theme.theme_cache_warmer" class="Shopware\Storefront\Theme\ThemeCacheWarmer" public="false">
            <tag name="kernel.cache_warmer" priority="15" />

            <argument type="service" id="service_container" />
            <argument type="service" id="assetic.asset_manager" />
            <argument>%assetic.write_to%</argument>
        </service>

        <service id="shopware.storefront.twig.template_finder" class="Shopware\Storefront\Twig\TemplateFinder" >
            <argument id="kernel" type="service"/>
            <argument id="twig.loader" type="service"/>
        </service>

        <service id="shopware.storefront.twig.inheritance_extension" class="Shopware\Storefront\Twig\InheritanceExtension" public="false">
            <tag name="twig.extension" />

            <argument type="service" id="shopware.storefront.twig.template_finder" />
        </service>

        <service id="twig.extension.intl" class="Twig_Extensions_Extension_Intl">
            <tag name="twig.extension" />
        </service>

        <service id="shopware.storefront.component.theme.config_reader" class="Shopware\Storefront\Theme\ThemeConfigReader">
            <argument type="service" id="dbal_connection" />
        </service>

        <!-- Session -->
        <service id="shopware.storefront.session" alias="session" />

        <service id="shopware.storefront.session.save_handler_factory" class="Shopware\Storefront\Session\SaveHandlerFactory">
            <argument type="service" id="dbal_connection" />
            <argument>s_core_sessions</argument>
        </service>

        <service id="shopware.storefront.session.save_handler" class="SessionHandlerInterface">
            <factory service="shopware.storefront.session.save_handler_factory" method="createSaveHandler" />
            <argument>%shopware.session%</argument>
        </service>

        <service id="shopware.session.shop_subscriber" class="Shopware\Storefront\Session\ShopSubscriber">
            <argument type="service" id="shopware.storefront.context.storefront_context_service" />
            <argument type="service" id="shopware.router" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service class="Shopware\Storefront\DetailPage\DetailPageUrlGenerator" id="shopware.storefront.detail_page.detail_page_url_generator">
            <argument id="shopware.product.gateway.product_repository" type="service"/>
            <argument id="slugify" type="service"/>
            <argument id="shopware.router" type="service"/>
            <argument id="shopware.seo_url.gateway.seo_url_repository" type="service" />
        </service>

        <service class="Shopware\Storefront\ListingPage\ListingPageUrlGenerator" id="shopware.storefront.listing_page.listing_page_url_generator">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.category.gateway.category_repository" type="service"/>
            <argument id="slugify" type="service"/>
            <argument id="shopware.router" type="service"/>
            <argument id="shopware.seo_url.gateway.seo_url_repository" type="service" />
        </service>

        <service class="Shopware\Storefront\Context\ShopContextValueResolver" id="shopware.storefront.context.shop_context_value_resolver">
            <tag name="controller.argument_value_resolver"/>
        </service>

        <service class="Shopware\Storefront\Context\StorefrontContextService" id="shopware.storefront.context.storefront_context_service">
            <argument id="request_stack" type="service"/>
            <argument id="shopware.context.service.context_factory" type="service"/>
            <argument id="shopware.cache" type="service"/>
            <argument id="shopware.serializer.serializer_registry" type="service"/>
        </service>

        <service class="Shopware\Storefront\Context\StorefrontContextSwitcher" id="shopware.storefront.context.storefront_context_switcher">
            <argument id="session" type="service"/>
            <argument id="shopware.storefront.context.storefront_context_service" type="service"/>
        </service>

        <service class="Shopware\Storefront\Navigation\NavigationLoader" id="shopware.storefront.navigation.navigation_loader">
            <argument id="shopware.category.gateway.category_repository" type="service"/>
        </service>

    </services>
</container>
