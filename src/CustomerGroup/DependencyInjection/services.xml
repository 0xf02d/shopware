<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\CustomerGroup\Struct\CustomerGroupHydrator" id="shopware.customer_group.struct.customer_group_hydrator">
            <argument id="shopware.framework.struct.attribute_hydrator" type="service"/>
        </service>
        <service class="Shopware\CustomerGroup\Gateway\CustomerGroupReader" id="shopware.customer_group.gateway.customer_group_reader">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.framework.struct.field_helper" type="service"/>
            <argument id="shopware.customer_group.struct.customer_group_hydrator" type="service"/>
        </service>
        <service class="Shopware\CustomerGroup\Gateway\CustomerGroupRepository" id="shopware.customer_group.gateway.customer_group_repository">
            <argument id="shopware.customer_group.gateway.customer_group_reader" type="service"/>
        </service>

    </services>
</container>