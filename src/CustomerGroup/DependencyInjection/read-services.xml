<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\CustomerGroup\Factory\CustomerGroupBasicFactory" id="shopware.customer_group.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>

        <service class="Shopware\CustomerGroup\Factory\CustomerGroupDetailFactory" id="shopware.customer_group.detail_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
            <argument id="shopware.customer_group_discount.basic_factory" type="service"/>
        </service>


        <service class="Shopware\CustomerGroup\Controller\CustomerGroupController" id="shopware.customer_group.api_controller">
            <argument id="shopware.customer_group.repository" type="service"/>
        </service>
        

        <service class="Shopware\CustomerGroup\Writer\CustomerGroupWriter" id="shopware.customer_group.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\CustomerGroup\Loader\CustomerGroupBasicLoader" id="shopware.customer_group.basic_loader">
            <argument id="shopware.customer_group.basic_factory" type="service"/>
        </service>

        <service class="Shopware\CustomerGroup\Loader\CustomerGroupDetailLoader" id="shopware.customer_group.detail_loader">
            <argument id="shopware.customer_group.detail_factory" type="service"/>
            <argument id="shopware.customer_group_discount.searcher" type="service"/>
        </service>

        <service class="Shopware\CustomerGroup\Searcher\CustomerGroupSearcher" id="shopware.customer_group.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.customer_group.detail_factory" type="service"/>
            <argument id="shopware.customer_group.basic_loader" type="service"/>
        </service>

        <service class="Shopware\CustomerGroup\Repository\CustomerGroupRepository" id="shopware.customer_group.repository">
            <argument id="shopware.customer_group.detail_loader" type="service"/>
            <argument id="shopware.customer_group.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.customer_group.searcher" type="service"/>
            <argument id="shopware.customer_group.writer" type="service"/>
        </service>

    </services>
</container>