<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Unit\Factory\UnitBasicFactory" id="shopware.unit.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>


        <service class="Shopware\Unit\Controller\UnitController" id="shopware.unit.api_controller">
            <argument id="shopware.unit.repository" type="service"/>
        </service>
        

        <service class="Shopware\Unit\Writer\UnitWriter" id="shopware.unit.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\Unit\Reader\UnitBasicReader" id="shopware.unit.basic_reader">
            <argument id="shopware.unit.basic_factory" type="service"/>
        </service>

        <service class="Shopware\Unit\Searcher\UnitSearcher" id="shopware.unit.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.unit.basic_factory" type="service"/>
            <argument id="shopware.unit.basic_reader" type="service"/>
        </service>

        <service class="Shopware\Unit\Repository\UnitRepository" id="shopware.unit.repository">
            <argument id="shopware.unit.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.unit.searcher" type="service"/>
            <argument id="shopware.unit.writer" type="service"/>
            <tag name="shopware.repository" />
        </service>

    </services>
</container>
