<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
         <service class="Shopware\Audit\Definition\AuditLogDefinition" id="shopware.audit.audit_log_definition" >
            <tag name="shopware.entity.definition" entity="audit_log" />
        </service>

        <service class="Shopware\Audit\Repository\AuditLogRepository" id="Shopware\Audit\Repository\AuditLogRepository" public="true">
          <argument id="shopware.api.entity_reader" type="service"/>
          <argument id="shopware.api.entity_writer" type="service"/>
          <argument id="shopware.api.entity_searcher" type="service"/>
          <argument id="shopware.api.entity_aggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>

        <service class="Shopware\Audit\Logging\EntityWriter" id="shopware.audit.entity_writer" decorates="shopware.api.entity_writer">
            <argument id="shopware.audit.entity_writer.inner" type="service"/>
            <argument type="service" id="security.token_storage"/>
            <argument type="service" id="shopware.api.entity_searcher" />
        </service>

    </services>
</container>                
                