<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\ProductVote\Factory\ProductVoteBasicFactory" id="shopware.product_vote.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection" />
        </service>

        <service class="Shopware\ProductVote\Loader\ProductVoteBasicLoader" id="shopware.product_vote.basic_loader">
            <argument id="shopware.product_vote.basic_factory" type="service"/>
        </service>

        <service class="Shopware\ProductVote\Searcher\ProductVoteSearcher" id="shopware.product_vote.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.product_vote.basic_factory" type="service"/>
            <argument id="shopware.product_vote.basic_loader" type="service"/>
        </service>

        <service class="Shopware\ProductVote\Repository\ProductVoteRepository" id="shopware.product_vote.repository">
            <argument id="shopware.product_vote.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.product_vote.searcher" type="service"/>
        </service>

    </services>
</container>