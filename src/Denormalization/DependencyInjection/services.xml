<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Denormalization\Category\CategoryPathBuilder" id="shopware.denormalization.category_path_builder">
            <argument id="shopware.category.repository" type="service"/>
            <argument id="dbal_connection" type="service"/>
        </service>

        <service class="Shopware\Denormalization\Category\CategorySubscriber" id="shopware.denormalization.category_subscriber">
            <argument id="shopware.denormalization.category_path_builder" type="service"/>
            <argument id="shopware.category.repository" type="service"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service class="Shopware\Denormalization\Product\ProductIndexer" id="shopware.denormalization.product.product_indexer">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.denormalization.product.listing_price_loader" type="service"/>
        </service>

        <service class="Shopware\Denormalization\Command\BuildCategoryPathCommand" id="shopware.denormalization.build_category_path_command">
            <tag name="console.command"/>
        </service>

        <service class="Shopware\Denormalization\Command\IndexProductsCommand" id="shopware.denormalization.index_products_command">
            <tag name="console.command"/>
        </service>

        <service class="Shopware\Denormalization\Product\ListingPriceLoader" id="shopware.denormalization.product.listing_price_loader">
            <argument id="dbal_connection" type="service"/>
        </service>

    </services>
</container>