<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Area\Factory\AreaBasicFactory" id="shopware.area.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>

        <service class="Shopware\Area\Factory\AreaDetailFactory" id="shopware.area.detail_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
            <argument id="shopware.area_country.detail_factory" type="service"/>
        </service>


        <service class="Shopware\Area\Controller\AreaController" id="shopware.area.api_controller">
            <argument id="shopware.area.repository" type="service"/>
        </service>
        

        <service class="Shopware\Area\Writer\AreaWriter" id="shopware.area.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\Area\Loader\AreaBasicLoader" id="shopware.area.basic_loader">
            <argument id="shopware.area.basic_factory" type="service"/>
        </service>

        <service class="Shopware\Area\Loader\AreaDetailLoader" id="shopware.area.detail_loader">
            <argument id="shopware.area.detail_factory" type="service"/>
            <argument id="shopware.area_country.searcher" type="service"/>
            <argument id="shopware.area_country.detail_loader" type="service"/>
        </service>

        <service class="Shopware\Area\Searcher\AreaSearcher" id="shopware.area.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.area.detail_factory" type="service"/>
            <argument id="shopware.area.basic_loader" type="service"/>
        </service>

        <service class="Shopware\Area\Repository\AreaRepository" id="shopware.area.repository">
            <argument id="shopware.area.detail_loader" type="service"/>
            <argument id="shopware.area.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.area.searcher" type="service"/>
            <argument id="shopware.area.writer" type="service"/>
        </service>

    </services>
</container>