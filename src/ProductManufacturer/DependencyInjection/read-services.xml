<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\ProductManufacturer\Factory\ProductManufacturerBasicFactory" id="shopware.product_manufacturer.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>


        <service class="Shopware\ProductManufacturer\Controller\ProductManufacturerController" id="shopware.product_manufacturer.api_controller">
            <argument id="shopware.product_manufacturer.repository" type="service"/>
        </service>
        

        <service class="Shopware\ProductManufacturer\Writer\ProductManufacturerWriter" id="shopware.product_manufacturer.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\ProductManufacturer\Reader\ProductManufacturerBasicReader" id="shopware.product_manufacturer.basic_reader">
            <argument id="shopware.product_manufacturer.basic_factory" type="service"/>
        </service>

        <service class="Shopware\ProductManufacturer\Searcher\ProductManufacturerSearcher" id="shopware.product_manufacturer.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.product_manufacturer.basic_factory" type="service"/>
            <argument id="shopware.product_manufacturer.basic_reader" type="service"/>
        </service>

        <service class="Shopware\ProductManufacturer\Repository\ProductManufacturerRepository" id="shopware.product_manufacturer.repository">
            <argument id="shopware.product_manufacturer.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.product_manufacturer.searcher" type="service"/>
            <argument id="shopware.product_manufacturer.writer" type="service"/>
        </service>

    </services>
</container>
