<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Context\Service\ContextFactory" id="shopware.context.service.context_factory">
            <argument id="shopware.shop.repository" type="service"/>
            <argument id="shopware.currency.repository" type="service"/>
            <argument id="shopware.customer.repository" type="service"/>
            <argument id="shopware.customer_group.repository" type="service"/>
            <argument id="shopware.area_country.repository" type="service"/>
            <argument id="shopware.tax.repository" type="service"/>
            <argument id="shopware.price_group.repository" type="service"/>
            <argument id="shopware.customer_address.repository" type="service"/>
            <argument id="shopware.payment_method.repository" type="service"/>
            <argument id="shopware.shipping_method.repository" type="service"/>
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.area_country_state.repository" type="service"/>
        </service>

    </services>
</container>