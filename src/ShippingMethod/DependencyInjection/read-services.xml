<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\ShippingMethod\Factory\ShippingMethodBasicFactory" id="shopware.shipping_method.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>

        <service class="Shopware\ShippingMethod\Factory\ShippingMethodDetailFactory" id="shopware.shipping_method.detail_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
            <argument id="shopware.category.basic_factory" type="service"/>
            <argument id="shopware.area_country.basic_factory" type="service"/>
            <argument id="shopware.holiday.basic_factory" type="service"/>
            <argument id="shopware.payment_method.basic_factory" type="service"/>
            <argument id="shopware.shipping_method_price.basic_factory" type="service"/>
        </service>


        <service class="Shopware\ShippingMethod\Controller\ShippingMethodController" id="shopware.shipping_method.api_controller">
            <argument id="shopware.shipping_method.repository" type="service"/>
        </service>
        

        <service class="Shopware\ShippingMethod\Writer\ShippingMethodWriter" id="shopware.shipping_method.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\ShippingMethod\Reader\ShippingMethodBasicReader" id="shopware.shipping_method.basic_reader">
            <argument id="shopware.shipping_method.basic_factory" type="service"/>
        </service>

        <service class="Shopware\ShippingMethod\Reader\ShippingMethodDetailReader" id="shopware.shipping_method.detail_reader">
            <argument id="shopware.shipping_method.detail_factory" type="service"/>
            <argument id="shopware.category.basic_reader" type="service"/>
            <argument id="shopware.area_country.basic_reader" type="service"/>
            <argument id="shopware.holiday.basic_reader" type="service"/>
            <argument id="shopware.payment_method.basic_reader" type="service"/>
            <argument id="shopware.shipping_method_price.searcher" type="service"/>
        </service>

        <service class="Shopware\ShippingMethod\Searcher\ShippingMethodSearcher" id="shopware.shipping_method.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.shipping_method.detail_factory" type="service"/>
            <argument id="shopware.shipping_method.basic_reader" type="service"/>
        </service>

        <service class="Shopware\ShippingMethod\Repository\ShippingMethodRepository" id="shopware.shipping_method.repository">
            <argument id="shopware.shipping_method.detail_reader" type="service"/>
            <argument id="shopware.shipping_method.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.shipping_method.searcher" type="service"/>
            <argument id="shopware.shipping_method.writer" type="service"/>
            <tag name="shopware.repository" />
        </service>

    </services>
</container>
