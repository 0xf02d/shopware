<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\ProductMedia\Factory\ProductMediaBasicFactory" id="shopware.product_media.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
            <argument id="shopware.media.basic_factory" type="service"/>
        </service>


        <service class="Shopware\ProductMedia\Controller\ProductMediaController" id="shopware.product_media.api_controller">
            <argument id="shopware.product_media.repository" type="service"/>
        </service>
        

        <service class="Shopware\ProductMedia\Writer\ProductMediaWriter" id="shopware.product_media.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\ProductMedia\Reader\ProductMediaBasicReader" id="shopware.product_media.basic_reader">
            <argument id="shopware.product_media.basic_factory" type="service"/>
        </service>

        <service class="Shopware\ProductMedia\Searcher\ProductMediaSearcher" id="shopware.product_media.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.product_media.basic_factory" type="service"/>
            <argument id="shopware.product_media.basic_reader" type="service"/>
        </service>

        <service class="Shopware\ProductMedia\Repository\ProductMediaRepository" id="shopware.product_media.repository">
            <argument id="shopware.product_media.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.product_media.searcher" type="service"/>
            <argument id="shopware.product_media.writer" type="service"/>
        </service>

    </services>
</container>
