<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\ShopTemplate\Factory\ShopTemplateBasicFactory" id="shopware.shop_template.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection" />
        </service>

        <service class="Shopware\ShopTemplate\Loader\ShopTemplateBasicLoader" id="shopware.shop_template.basic_loader">
            <argument id="shopware.shop_template.basic_factory" type="service"/>
        </service>

        <service class="Shopware\ShopTemplate\Searcher\ShopTemplateSearcher" id="shopware.shop_template.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.shop_template.basic_factory" type="service"/>
            <argument id="shopware.shop_template.basic_loader" type="service"/>
        </service>

        <service class="Shopware\ShopTemplate\Repository\ShopTemplateRepository" id="shopware.shop_template.repository">
            <argument id="shopware.shop_template.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.shop_template.searcher" type="service"/>
        </service>

    </services>
</container>