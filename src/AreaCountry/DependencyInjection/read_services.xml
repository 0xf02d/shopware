<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\AreaCountry\Factory\AreaCountryBasicFactory" id="shopware.area_country.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection" />
        </service>

        <service class="Shopware\AreaCountry\Factory\AreaCountryDetailFactory" id="shopware.area_country.detail_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection" />
            <argument id="shopware.area_country_state.basic_factory" type="service"/>
        </service>


        <service class="Shopware\AreaCountry\Controller\AreaCountryController" id="shopware.area_country.api_controller">
            <argument id="shopware.area_country.repository" type="service"/>
        </service>
        

        <service class="Shopware\AreaCountry\Writer\AreaCountryWriter" id="shopware.area_country.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\AreaCountry\Loader\AreaCountryBasicLoader" id="shopware.area_country.basic_loader">
            <argument id="shopware.area_country.basic_factory" type="service"/>
        </service>

        <service class="Shopware\AreaCountry\Loader\AreaCountryDetailLoader" id="shopware.area_country.detail_loader">
            <argument id="shopware.area_country.detail_factory" type="service"/>
            <argument id="shopware.area_country_state.searcher" type="service"/>
        </service>

        <service class="Shopware\AreaCountry\Searcher\AreaCountrySearcher" id="shopware.area_country.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.area_country.detail_factory" type="service"/>
            <argument id="shopware.area_country.basic_loader" type="service"/>
        </service>

        <service class="Shopware\AreaCountry\Repository\AreaCountryRepository" id="shopware.area_country.repository">
            <argument id="shopware.area_country.detail_loader" type="service"/>
            <argument id="shopware.area_country.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.area_country.searcher" type="service"/>
            <argument id="shopware.area_country.writer" type="service"/>
        </service>

    </services>
</container>