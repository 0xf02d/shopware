<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\AreaCountry\Reader\AreaCountryBasicHydrator"
                 id="shopware.area_country.reader.basic_hydrator">

        </service>

        <service class="Shopware\AreaCountry\Reader\AreaCountryBasicReader"
                 id="shopware.area_country.reader.basic_reader">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.area_country.reader.basic_hydrator" type="service"/>
        </service>

        <service class="Shopware\AreaCountry\Loader\AreaCountryBasicLoader"
                 id="shopware.area_country.loader.basic_loader">
            <argument type="service" id="shopware.area_country.reader.basic_reader"/>

        </service>

        <service class="Shopware\AreaCountry\Searcher\AreaCountrySearcher" id="shopware.area_country.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection">
                <argument id="shopware.area_country.searcher.handler.area_uuid_handler" type="service"/>
            </argument>
            <argument id="shopware.area_country.reader.basic_hydrator" type="service"/>
        </service>

        <service class="Shopware\AreaCountry\Writer\AreaCountryWriter" id="shopware.area_country.writer.writer"/>

        <service class="Shopware\AreaCountry\AreaCountryRepository" id="shopware.area_country.repository">
            <argument id="shopware.area_country.loader.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.area_country.searcher" type="service"/>
            <argument id="shopware.area_country.writer.writer" type="service"/>
            <argument id="shopware.area_country.loader.detail_loader" type="service"/>
        </service>

        <service class="Shopware\AreaCountry\Loader\AreaCountryDetailLoader"
                 id="shopware.area_country.loader.detail_loader">
            <argument type="service" id="shopware.area_country.loader.basic_loader"/>
            <argument type="service" id="shopware.area_country_state.searcher"/>
        </service>

        <service class="Shopware\AreaCountry\Searcher\Handler\AreaUuidHandler"
                 id="shopware.area_country.searcher.handler.area_uuid_handler"/>
    </services>
</container>