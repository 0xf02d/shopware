<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Album\Factory\AlbumBasicFactory" id="shopware.album.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>

        <service class="Shopware\Album\Factory\AlbumDetailFactory" id="shopware.album.detail_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
            <argument id="shopware.media.basic_factory" type="service"/>
        </service>


        <service class="Shopware\Album\Controller\AlbumController" id="shopware.album.api_controller">
            <argument id="shopware.album.repository" type="service"/>
        </service>
        

        <service class="Shopware\Album\Writer\AlbumWriter" id="shopware.album.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\Album\Reader\AlbumBasicReader" id="shopware.album.basic_reader">
            <argument id="shopware.album.basic_factory" type="service"/>
        </service>

        <service class="Shopware\Album\Reader\AlbumDetailReader" id="shopware.album.detail_reader">
            <argument id="shopware.album.detail_factory" type="service"/>
            <argument id="shopware.media.searcher" type="service"/>
        </service>

        <service class="Shopware\Album\Searcher\AlbumSearcher" id="shopware.album.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.album.detail_factory" type="service"/>
            <argument id="shopware.album.basic_reader" type="service"/>
        </service>

        <service class="Shopware\Album\Repository\AlbumRepository" id="shopware.album.repository">
            <argument id="shopware.album.detail_reader" type="service"/>
            <argument id="shopware.album.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.album.searcher" type="service"/>
            <argument id="shopware.album.writer" type="service"/>
            <tag name="shopware.repository" />
        </service>

    </services>
</container>
