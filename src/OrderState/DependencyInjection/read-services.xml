<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\OrderState\Factory\OrderStateBasicFactory" id="shopware.order_state.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>


        <service class="Shopware\OrderState\Controller\OrderStateController" id="shopware.order_state.api_controller">
            <argument id="shopware.order_state.repository" type="service"/>
        </service>
        

        <service class="Shopware\OrderState\Writer\OrderStateWriter" id="shopware.order_state.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\OrderState\Loader\OrderStateBasicLoader" id="shopware.order_state.basic_loader">
            <argument id="shopware.order_state.basic_factory" type="service"/>
        </service>

        <service class="Shopware\OrderState\Searcher\OrderStateSearcher" id="shopware.order_state.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.order_state.basic_factory" type="service"/>
            <argument id="shopware.order_state.basic_loader" type="service"/>
        </service>

        <service class="Shopware\OrderState\Repository\OrderStateRepository" id="shopware.order_state.repository">
            <argument id="shopware.order_state.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.order_state.searcher" type="service"/>
            <argument id="shopware.order_state.writer" type="service"/>
        </service>

    </services>
</container>
