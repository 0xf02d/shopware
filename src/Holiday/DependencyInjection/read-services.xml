<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Holiday\Factory\HolidayBasicFactory" id="shopware.holiday.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>


        <service class="Shopware\Holiday\Controller\HolidayController" id="shopware.holiday.api_controller">
            <argument id="shopware.holiday.repository" type="service"/>
        </service>
        

        <service class="Shopware\Holiday\Writer\HolidayWriter" id="shopware.holiday.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\Holiday\Reader\HolidayBasicReader" id="shopware.holiday.basic_reader">
            <argument id="shopware.holiday.basic_factory" type="service"/>
        </service>

        <service class="Shopware\Holiday\Searcher\HolidaySearcher" id="shopware.holiday.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.holiday.basic_factory" type="service"/>
            <argument id="shopware.holiday.basic_reader" type="service"/>
        </service>

        <service class="Shopware\Holiday\Repository\HolidayRepository" id="shopware.holiday.repository">
            <argument id="shopware.holiday.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.holiday.searcher" type="service"/>
            <argument id="shopware.holiday.writer" type="service"/>
            <tag name="shopware.repository" />
        </service>

    </services>
</container>
