<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Locale\Factory\LocaleBasicFactory" id="shopware.locale.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>


        <service class="Shopware\Locale\Controller\LocaleController" id="shopware.locale.api_controller">
            <argument id="shopware.locale.repository" type="service"/>
        </service>
        

        <service class="Shopware\Locale\Writer\LocaleWriter" id="shopware.locale.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\Locale\Reader\LocaleBasicReader" id="shopware.locale.basic_reader">
            <argument id="shopware.locale.basic_factory" type="service"/>
        </service>

        <service class="Shopware\Locale\Searcher\LocaleSearcher" id="shopware.locale.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.locale.basic_factory" type="service"/>
            <argument id="shopware.locale.basic_reader" type="service"/>
        </service>

        <service class="Shopware\Locale\Repository\LocaleRepository" id="shopware.locale.repository">
            <argument id="shopware.locale.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.locale.searcher" type="service"/>
            <argument id="shopware.locale.writer" type="service"/>
            <tag name="shopware.repository" />
        </service>

    </services>
</container>
