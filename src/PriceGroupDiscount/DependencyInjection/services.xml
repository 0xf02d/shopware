<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\PriceGroupDiscount\Reader\PriceGroupDiscountBasicHydrator"
                 id="shopware.price_group_discount.reader.basic_hydrator">

        </service>

        <service class="Shopware\PriceGroupDiscount\Reader\PriceGroupDiscountBasicReader"
                 id="shopware.price_group_discount.reader.basic_reader">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.price_group_discount.reader.basic_hydrator" type="service"/>
        </service>

        <service class="Shopware\PriceGroupDiscount\Loader\PriceGroupDiscountBasicLoader"
                 id="shopware.price_group_discount.loader.basic_loader">
            <argument type="service" id="shopware.price_group_discount.reader.basic_reader"/>

        </service>

        <service class="Shopware\PriceGroupDiscount\Searcher\PriceGroupDiscountSearcher"
                 id="shopware.price_group_discount.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection">
                <argument id="shopware.price_group_discount.searcher.handler.price_group_uuid_handler" type="service"/>
            </argument>
            <argument id="shopware.price_group_discount.reader.basic_hydrator" type="service"/>
        </service>

        <service class="Shopware\PriceGroupDiscount\Writer\PriceGroupDiscountWriter"
                 id="shopware.price_group_discount.writer.writer"/>

        <service class="Shopware\PriceGroupDiscount\PriceGroupDiscountRepository"
                 id="shopware.price_group_discount.repository">
            <argument id="shopware.price_group_discount.loader.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.price_group_discount.searcher" type="service"/>
            <argument id="shopware.price_group_discount.writer.writer" type="service"/>

        </service>

        <service class="Shopware\PriceGroupDiscount\Searcher\Handler\PriceGroupUuidHandler"
                 id="shopware.price_group_discount.searcher.handler.price_group_uuid_handler"/>
    </services>
</container>