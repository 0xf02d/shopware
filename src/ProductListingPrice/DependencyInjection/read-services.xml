<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\ProductListingPrice\Factory\ProductListingPriceBasicFactory" id="shopware.product_listing_price_ro.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>


        <service class="Shopware\ProductListingPrice\Controller\ProductListingPriceController" id="shopware.product_listing_price_ro.api_controller">
            <argument id="shopware.product_listing_price_ro.repository" type="service"/>
        </service>
        

        <service class="Shopware\ProductListingPrice\Writer\ProductListingPriceWriter" id="shopware.product_listing_price_ro.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\ProductListingPrice\Loader\ProductListingPriceBasicLoader" id="shopware.product_listing_price_ro.basic_loader">
            <argument id="shopware.product_listing_price_ro.basic_factory" type="service"/>
        </service>

        <service class="Shopware\ProductListingPrice\Searcher\ProductListingPriceSearcher" id="shopware.product_listing_price_ro.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.product_listing_price_ro.basic_factory" type="service"/>
            <argument id="shopware.product_listing_price_ro.basic_loader" type="service"/>
        </service>

        <service class="Shopware\ProductListingPrice\Repository\ProductListingPriceRepository" id="shopware.product_listing_price_ro.repository">
            <argument id="shopware.product_listing_price_ro.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.product_listing_price_ro.searcher" type="service"/>
            <argument id="shopware.product_listing_price_ro.writer" type="service"/>
        </service>

    </services>
</container>
