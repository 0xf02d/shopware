{% block list %}
    <div class="core-product--list" slot="default">

        <sw-grid>
            {% block grid_header %}
            <sw-grid-header>
                {% block grid_header_columns %}
                <sw-grid-col :width="50">&nbsp;</sw-grid-col>
                <sw-grid-col :width="50">Id #</sw-grid-col>
                <sw-grid-col :width="500">Name</sw-grid-col>
                <sw-grid-col :width="300">Hersteller</sw-grid-col>
                <sw-grid-col :width="100">Aktiv</sw-grid-col>
                <sw-grid-col :width="250">Preis</sw-grid-col>
                <sw-grid-col :width="150">Lager</sw-grid-col>
                <sw-grid-col :width="100">Info</sw-grid-col>
                {% endblock %}
            </sw-grid-header>
            {% endblock %}

            {% block grid_body %}
            <sw-grid-body>
                {% block grid_item %}
                <sw-grid-row v-for="(item, index) in productList" :key="item.id" :editable="true" :item="item">
                    {% block grid_columns %}
                    <sw-grid-col :width="50">
                        <input type="checkbox" readonly="true" />
                    </sw-grid-col>
                    <sw-grid-col :width="50">
                        {{index + 1}}
                    </sw-grid-col>
                    <sw-grid-col :width="500" data-index="name" editor="text">
                        {{item.uuid}}
                    </sw-grid-col>
                    <sw-grid-col :width="300">
                        {{item.manufacturer.name}}
                    </sw-grid-col>
                    <sw-grid-col :width="100">
                        <input type="checkbox" readonly="true" v-model="item.active" />
                    </sw-grid-col>
                    <sw-grid-col :width="250">
                       {{item.mainDetail.purchasePrice | currency }}
                    </sw-grid-col>
                    <sw-grid-col :width="150" data-index="pseudoSales" editor="number">
                        {{item.pseudoSales}} auf Lager
                    </sw-grid-col>

                    <sw-grid-col :width="100">
                        <!-- <router-link :to="{ name: 'product-detail', params: { id: item.id }}">
                            Details
                        </router-link> -->
                    </sw-grid-col>
                    {% endblock %}
                </sw-grid-row>
                {% endblock %}
            </sw-grid-body>
            {% endblock %}

            {% block grid_pagination %}
            <sw-pagination :page-num="pageNum" :max-page="maxPage" :per-page="limit" :total="total" v-on:data-changed="handlePagination"></sw-pagination>
            {% endblock %}

            <sw-loader v-if="isWorking"></sw-loader>
        </sw-grid>
    </div>
{% endblock %}