<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>
        Project Nexus &bull; Shopware X {Shopware::VERSION} {Shopware::VERSION_TEXT} (Rev. {Shopware::REVISION}) -
        Backend (c) shopware AG
    </title>

    <link rel="stylesheet" href="{{ asset('bundles/nexus/static/css/app.css') }}">
</head>
<body>

<div id="app"></div>

<script src="{{ asset('bundles/nexus/static/js/manifest.js') }}"></script>
<script src="{{ asset('bundles/nexus/static/js/vendor.js') }}"></script>
<script src="{{ asset('bundles/nexus/static/js/commons.js') }}"></script>
<script src="{{ asset('bundles/nexus/static/js/app.js') }}"></script>

<script>
    /*
        root-level domain configuration

        host:               shopware.next
        port:               80
        scheme:             http
        schemeAndHttpHost:  http://shopware.next
        uri:                http://shopware.next/nexus
        basePath:
        pathInfo:           /nexus

        -----------------------------------------------

        sub-folder domain configuration

        host:               localhost
        port:               80
        scheme:             http
        schemeAndHttpHost:  http://localhost
        uri:                http://localhost/next/web/nexus
        basePath:           /next/web
        pathInfo:           /nexus
    */
    const shopware_context = {
        host: '{{ app.request.host }}',
        port: {{ app.request.port }},
        scheme: '{{ app.request.scheme }}',
        schemeAndHttpHost: '{{ app.request.schemeAndHttpHost }}',
        uri: '{{ app.request.uri }}',
        basePath: '{{ app.request.basePath }}',
        pathInfo: '{{ app.request.pathInfo }}'
    };

    ShopwareApplication.default.start(shopware_context);
</script>

</body>
</html>
