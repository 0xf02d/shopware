<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="shopware.framework.api2.sql_gateway" class="Shopware\Framework\Api2\SqlGateway">
            <argument type="service" id="doctrine.dbal.default_connection"/>
        </service>

        <!-- Value transformer -->
        <service class="Shopware\Framework\Api2\ApiValueTransformer\ValueTransformerRegistry"
                 id="shopware.framework.api2.value_transformer_registry"/>
        <service class="Shopware\Framework\Api2\ApiValueTransformer\ValueTransformerDate"
                 id="shopware.framework.api2.value_transformer_date">
            <tag name="shopware.framework.api2.value_transformer"/>
        </service>
        <service class="Shopware\Framework\Api2\ApiValueTransformer\ValueTransformerBoolean"
                 id="shopware.framework.api2.value_transformer_boolean">
            <tag name="shopware.framework.api2.value_transformer"/>
        </service>

        <!-- Filter -->
        <service class="Shopware\Framework\Api2\ApiFilter\FilterRegistry" id="shopware.framework.api2.filter_registry"/>
        <service class="Shopware\Framework\Api2\ApiFilter\HtmlFilter" id="shopware.framework.api2.filter_html">
            <tag name="shopware.framework.api2.filter"/>
        </service>

        <!-- UUID GENERATOOR -->
        <service id="shopware.framework.api2.uuid_generator_registry"
                 class="Shopware\Framework\Api2\UuidGenerator\GeneratorRegistry"/>
        <service id="shopware.framework.api2.uuid_generator_ramsey"
                 class="Shopware\Framework\Api2\UuidGenerator\RamseyGenerator">
            <tag name="shopware.framework.api2.uuid_generator"/>
        </service>
        <service id="shopware.framework.api2.uuid_generator_product_number"
                 class="Shopware\Framework\Api2\UuidGenerator\ProductNumberGenerator">
            <argument type="service" id="doctrine.dbal.default_connection"/>

            <tag name="shopware.framework.api2.uuid_generator"/>
        </service>
        <service class="Shopware\Framework\Api2\Resource\ResourceRegistry"
                 id="shopware.framework.api2.resource_registry"/>
        <service class="Shopware\Framework\Api2\FieldAware\DefaultExtender"
                 id="shopware.framework.api2.field_aware.default_extender">
            <argument type="service" id="shopware.framework.api2.resource_registry"/>
            <argument type="service" id="shopware.framework.api2.sql_gateway"/>
            <argument type="service" id="validator"/>
            <argument type="service" id="shopware.validation.constraint_builder"/>
            <argument type="service" id="shopware.framework.api2.uuid_generator_registry"/>
            <argument type="service" id="shopware.framework.api2.filter_registry"/>
            <argument type="service" id="shopware.framework.api2.value_transformer_registry"/>
        </service>
        <service id="shopware.framework.api2.field_extender_collection"
                 class="Shopware\Framework\Api2\FieldAware\FieldExtenderCollection"/>
        <service id="shopware.framework.api2.writer" class="Shopware\Framework\Api2\Writer">
            <argument type="service" id="shopware.framework.api2.sql_gateway"/>
            <argument type="service" id="shopware.framework.api2.resource_registry"/>
            <argument type="service" id="doctrine.dbal.default_connection"/>
        </service>
    </services>
</container>
