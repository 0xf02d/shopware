<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\SeoUrl\Factory\SeoUrlBasicFactory" id="shopware.seo_url.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>


        <service class="Shopware\SeoUrl\Controller\SeoUrlController" id="shopware.seo_url.api_controller">
            <argument id="shopware.seo_url.repository" type="service"/>
        </service>
        

        <service class="Shopware\SeoUrl\Writer\SeoUrlWriter" id="shopware.seo_url.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\SeoUrl\Reader\SeoUrlBasicReader" id="shopware.seo_url.basic_reader">
            <argument id="shopware.seo_url.basic_factory" type="service"/>
        </service>

        <service class="Shopware\SeoUrl\Searcher\SeoUrlSearcher" id="shopware.seo_url.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.seo_url.basic_factory" type="service"/>
            <argument id="shopware.seo_url.basic_reader" type="service"/>
        </service>

        <service class="Shopware\SeoUrl\Repository\SeoUrlRepository" id="shopware.seo_url.repository">
            <argument id="shopware.seo_url.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.seo_url.searcher" type="service"/>
            <argument id="shopware.seo_url.writer" type="service"/>
        </service>

    </services>
</container>
