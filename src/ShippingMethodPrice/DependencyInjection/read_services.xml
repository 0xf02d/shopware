<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\ShippingMethodPrice\Factory\ShippingMethodPriceBasicFactory" id="shopware.shipping_method_price.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>


        <service class="Shopware\ShippingMethodPrice\Controller\ShippingMethodPriceController" id="shopware.shipping_method_price.api_controller">
            <argument id="shopware.shipping_method_price.repository" type="service"/>
        </service>
        

        <service class="Shopware\ShippingMethodPrice\Writer\ShippingMethodPriceWriter" id="shopware.shipping_method_price.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\ShippingMethodPrice\Loader\ShippingMethodPriceBasicLoader" id="shopware.shipping_method_price.basic_loader">
            <argument id="shopware.shipping_method_price.basic_factory" type="service"/>
        </service>

        <service class="Shopware\ShippingMethodPrice\Searcher\ShippingMethodPriceSearcher" id="shopware.shipping_method_price.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.shipping_method_price.basic_factory" type="service"/>
            <argument id="shopware.shipping_method_price.basic_loader" type="service"/>
        </service>

        <service class="Shopware\ShippingMethodPrice\Repository\ShippingMethodPriceRepository" id="shopware.shipping_method_price.repository">
            <argument id="shopware.shipping_method_price.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.shipping_method_price.searcher" type="service"/>
            <argument id="shopware.shipping_method_price.writer" type="service"/>
        </service>

    </services>
</container>