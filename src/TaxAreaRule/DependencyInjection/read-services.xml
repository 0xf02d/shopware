<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\TaxAreaRule\Factory\TaxAreaRuleBasicFactory" id="shopware.tax_area_rule.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>


        <service class="Shopware\TaxAreaRule\Controller\TaxAreaRuleController" id="shopware.tax_area_rule.api_controller">
            <argument id="shopware.tax_area_rule.repository" type="service"/>
        </service>
        

        <service class="Shopware\TaxAreaRule\Writer\TaxAreaRuleWriter" id="shopware.tax_area_rule.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\TaxAreaRule\Loader\TaxAreaRuleBasicLoader" id="shopware.tax_area_rule.basic_loader">
            <argument id="shopware.tax_area_rule.basic_factory" type="service"/>
        </service>

        <service class="Shopware\TaxAreaRule\Searcher\TaxAreaRuleSearcher" id="shopware.tax_area_rule.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.tax_area_rule.basic_factory" type="service"/>
            <argument id="shopware.tax_area_rule.basic_loader" type="service"/>
        </service>

        <service class="Shopware\TaxAreaRule\Repository\TaxAreaRuleRepository" id="shopware.tax_area_rule.repository">
            <argument id="shopware.tax_area_rule.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.tax_area_rule.searcher" type="service"/>
            <argument id="shopware.tax_area_rule.writer" type="service"/>
        </service>

    </services>
</container>
