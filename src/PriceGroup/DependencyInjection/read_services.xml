<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\PriceGroup\Factory\PriceGroupBasicFactory" id="shopware.price_group.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection" />
        </service>

        <service class="Shopware\PriceGroup\Factory\PriceGroupDetailFactory" id="shopware.price_group.detail_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection" />
            <argument id="shopware.price_group_discount.basic_factory" type="service"/>
        </service>


        <service class="Shopware\PriceGroup\Controller\PriceGroupController" id="shopware.price_group.api_controller">
            <argument id="shopware.price_group.repository" type="service"/>
        </service>
        

        <service class="Shopware\PriceGroup\Writer\PriceGroupWriter" id="shopware.price_group.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\PriceGroup\Loader\PriceGroupBasicLoader" id="shopware.price_group.basic_loader">
            <argument id="shopware.price_group.basic_factory" type="service"/>
        </service>

        <service class="Shopware\PriceGroup\Loader\PriceGroupDetailLoader" id="shopware.price_group.detail_loader">
            <argument id="shopware.price_group.detail_factory" type="service"/>
            <argument id="shopware.price_group_discount.searcher" type="service"/>
        </service>

        <service class="Shopware\PriceGroup\Searcher\PriceGroupSearcher" id="shopware.price_group.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.price_group.detail_factory" type="service"/>
            <argument id="shopware.price_group.basic_loader" type="service"/>
        </service>

        <service class="Shopware\PriceGroup\Repository\PriceGroupRepository" id="shopware.price_group.repository">
            <argument id="shopware.price_group.detail_loader" type="service"/>
            <argument id="shopware.price_group.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.price_group.searcher" type="service"/>
            <argument id="shopware.price_group.writer" type="service"/>
        </service>

    </services>
</container>