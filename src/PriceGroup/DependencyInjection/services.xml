<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\PriceGroup\Struct\PriceGroupHydrator" id="shopware.price_group.struct.price_group_hydrator">
            <argument id="shopware.price_group_discount.struct.price_group_discount_hydrator" type="service"/>
        </service>
        <service class="Shopware\PriceGroup\Gateway\PriceGroupReader" id="shopware.price_group.gateway.price_group_reader">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.framework.struct.field_helper" type="service"/>
            <argument id="shopware.price_group.struct.price_group_hydrator" type="service"/>
        </service>
        <service class="Shopware\PriceGroup\Gateway\PriceGroupRepository" id="shopware.price_group.gateway.price_group_repository">
            <argument id="shopware.price_group.gateway.price_group_reader" type="service"/>
        </service>

    </services>
</container>