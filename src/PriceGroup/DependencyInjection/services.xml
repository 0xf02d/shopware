<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\PriceGroup\Reader\PriceGroupBasicHydrator"
                 id="shopware.price_group.reader.basic_hydrator">

        </service>

        <service class="Shopware\PriceGroup\Reader\PriceGroupBasicReader" id="shopware.price_group.reader.basic_reader">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.price_group.reader.basic_hydrator" type="service"/>
        </service>

        <service class="Shopware\PriceGroup\Loader\PriceGroupBasicLoader" id="shopware.price_group.loader.basic_loader">
            <argument type="service" id="shopware.price_group.reader.basic_reader"/>

        </service>

        <service class="Shopware\PriceGroup\Searcher\PriceGroupSearcher" id="shopware.price_group.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection">

            </argument>
            <argument id="shopware.price_group.reader.basic_hydrator" type="service"/>
        </service>

        <service class="Shopware\PriceGroup\Writer\PriceGroupWriter" id="shopware.price_group.writer.writer"/>

        <service class="Shopware\PriceGroup\PriceGroupRepository" id="shopware.price_group.repository">
            <argument id="shopware.price_group.loader.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.price_group.searcher" type="service"/>
            <argument id="shopware.price_group.writer.writer" type="service"/>
            <argument id="shopware.price_group.loader.detail_loader" type="service"/>
        </service>

        <service class="Shopware\PriceGroup\Loader\PriceGroupDetailLoader"
                 id="shopware.price_group.loader.detail_loader">
            <argument type="service" id="shopware.price_group.loader.basic_loader"/>
            <argument type="service" id="shopware.price_group_discount.searcher"/>
        </service>

    </services>
</container>