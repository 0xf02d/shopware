<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
         <service class="Shopware\Api\Currency\Definition\CurrencyDefinition" id="shopware.currency.currency_definition" >
            <tag name="shopware.entity.definition" entity="currency" />
        </service>
        <service class="Shopware\Api\Currency\Repository\CurrencyRepository" id="Shopware\Api\Currency\Repository\CurrencyRepository" public="true">
          <argument id="shopware.api.entity_reader" type="service"/>
          <argument id="shopware.api.entity_writer" type="service"/>
          <argument id="shopware.api.entity_searcher" type="service"/>
          <argument id="shopware.api.entity_aggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
         <service class="Shopware\Api\Currency\Definition\CurrencyTranslationDefinition" id="shopware.currency.currency_translation_definition" >
            <tag name="shopware.entity.definition" entity="currency_translation" />
        </service>
        <service class="Shopware\Api\Currency\Repository\CurrencyTranslationRepository" id="Shopware\Api\Currency\Repository\CurrencyTranslationRepository" public="true">
          <argument id="shopware.api.entity_reader" type="service"/>
          <argument id="shopware.api.entity_writer" type="service"/>
          <argument id="shopware.api.entity_searcher" type="service"/>
          <argument id="shopware.api.entity_aggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>                
                