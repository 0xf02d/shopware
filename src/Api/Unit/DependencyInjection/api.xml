<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
         <service class="Shopware\Api\Unit\Definition\UnitDefinition" id="shopware.unit.unit_definition" >
            <tag name="shopware.entity.definition" entity="unit" />
        </service>
        <service class="Shopware\Api\Unit\Repository\UnitRepository" id="Shopware\Api\Unit\Repository\UnitRepository" public="true">
          <argument id="shopware.api.entity_reader" type="service"/>
          <argument id="shopware.api.entity_writer" type="service"/>
          <argument id="shopware.api.entity_searcher" type="service"/>
          <argument id="shopware.api.entity_aggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
         <service class="Shopware\Api\Unit\Definition\UnitTranslationDefinition" id="shopware.unit.unit_translation_definition" >
            <tag name="shopware.entity.definition" entity="unit_translation" />
        </service>
        <service class="Shopware\Api\Unit\Repository\UnitTranslationRepository" id="Shopware\Api\Unit\Repository\UnitTranslationRepository" public="true">
          <argument id="shopware.api.entity_reader" type="service"/>
          <argument id="shopware.api.entity_writer" type="service"/>
          <argument id="shopware.api.entity_searcher" type="service"/>
          <argument id="shopware.api.entity_aggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>                
                