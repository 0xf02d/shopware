<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Address\Struct\AddressHydrator" id="shopware.address.struct.address_hydrator">
            <argument id="shopware.framework.struct.attribute_hydrator" type="service"/>
            <argument id="shopware.country.struct.country_hydrator" type="service"/>
            <argument id="shopware.country_state.struct.country_state_hydrator" type="service"/>
        </service>

        <service class="Shopware\Address\Gateway\AddressReader" id="shopware.address.gateway.address_reader">
            <argument id="shopware.framework.struct.field_helper" type="service"/>
            <argument id="shopware.address.struct.address_hydrator" type="service"/>
            <argument id="dbal_connection" type="service"/>
        </service>

        <service class="Shopware\Address\Gateway\AddressRepository" id="shopware.address.gateway.address_repository">
            <argument id="shopware.address.gateway.address_reader" type="service"/>
        </service>

    </services>
</container>