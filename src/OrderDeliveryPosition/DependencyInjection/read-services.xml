<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\OrderDeliveryPosition\Factory\OrderDeliveryPositionBasicFactory" id="shopware.order_delivery_position.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
            <argument id="shopware.order_line_item.basic_factory" type="service"/>
        </service>


        <service class="Shopware\OrderDeliveryPosition\Controller\OrderDeliveryPositionController" id="shopware.order_delivery_position.api_controller">
            <argument id="shopware.order_delivery_position.repository" type="service"/>
        </service>
        

        <service class="Shopware\OrderDeliveryPosition\Writer\OrderDeliveryPositionWriter" id="shopware.order_delivery_position.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\OrderDeliveryPosition\Reader\OrderDeliveryPositionBasicReader" id="shopware.order_delivery_position.basic_reader">
            <argument id="shopware.order_delivery_position.basic_factory" type="service"/>
        </service>

        <service class="Shopware\OrderDeliveryPosition\Searcher\OrderDeliveryPositionSearcher" id="shopware.order_delivery_position.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.order_delivery_position.basic_factory" type="service"/>
            <argument id="shopware.order_delivery_position.basic_reader" type="service"/>
        </service>

        <service class="Shopware\OrderDeliveryPosition\Repository\OrderDeliveryPositionRepository" id="shopware.order_delivery_position.repository">
            <argument id="shopware.order_delivery_position.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.order_delivery_position.searcher" type="service"/>
            <argument id="shopware.order_delivery_position.writer" type="service"/>
        </service>

    </services>
</container>
