<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Shopware\Traceable\DataCollector\CartCollector" public="false">
            <tag name="data_collector" template="@Traceable/Profiler/layout.html.twig" id="cart"/>
            <argument type="service" id="shopware.traceable.traced_cart_actions"/>
        </service>

        <service class="Shopware\Traceable\Cart\TracedCartActions" id="shopware.traceable.traced_cart_actions"/>

        <service class="Shopware\Traceable\Dbal\TraceableEntityReader"
                 id="shopware.traceable.traceable_entity_reader"
                 decorates="shopware.api.entity_reader">

            <argument id="shopware.traceable.traceable_entity_reader.inner" type="service"/>
            <argument id="debug.stopwatch" type="service"/>
        </service>

        <service class="Shopware\Traceable\Dbal\TraceableEntitySearcher"
                 id="shopware.traceable.traceable_entity_searcher"
                 decorates="shopware.api.entity_searcher">

            <argument id="shopware.traceable.traceable_entity_searcher.inner" type="service"/>
            <argument id="debug.stopwatch" type="service"/>
        </service>


    </services>
</container>