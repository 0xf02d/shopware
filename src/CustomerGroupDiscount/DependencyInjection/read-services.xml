<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\CustomerGroupDiscount\Factory\CustomerGroupDiscountBasicFactory" id="shopware.customer_group_discount.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>


        <service class="Shopware\CustomerGroupDiscount\Controller\CustomerGroupDiscountController" id="shopware.customer_group_discount.api_controller">
            <argument id="shopware.customer_group_discount.repository" type="service"/>
        </service>
        

        <service class="Shopware\CustomerGroupDiscount\Writer\CustomerGroupDiscountWriter" id="shopware.customer_group_discount.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\CustomerGroupDiscount\Loader\CustomerGroupDiscountBasicLoader" id="shopware.customer_group_discount.basic_loader">
            <argument id="shopware.customer_group_discount.basic_factory" type="service"/>
        </service>

        <service class="Shopware\CustomerGroupDiscount\Searcher\CustomerGroupDiscountSearcher" id="shopware.customer_group_discount.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.customer_group_discount.basic_factory" type="service"/>
            <argument id="shopware.customer_group_discount.basic_loader" type="service"/>
        </service>

        <service class="Shopware\CustomerGroupDiscount\Repository\CustomerGroupDiscountRepository" id="shopware.customer_group_discount.repository">
            <argument id="shopware.customer_group_discount.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.customer_group_discount.searcher" type="service"/>
            <argument id="shopware.customer_group_discount.writer" type="service"/>
        </service>

    </services>
</container>
