<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Currency\Factory\CurrencyBasicFactory" id="shopware.currency.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection" />
        </service>

        <service class="Shopware\Currency\Factory\CurrencyDetailFactory" id="shopware.currency.detail_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection" />
            <argument id="shopware.shop.basic_factory" type="service"/>
        </service>


        <service class="Shopware\Currency\Controller\CurrencyController" id="shopware.currency.api_controller">
            <argument id="shopware.currency.repository" type="service"/>
        </service>
        

        <service class="Shopware\Currency\Writer\CurrencyWriter" id="shopware.currency.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\Currency\Loader\CurrencyBasicLoader" id="shopware.currency.basic_loader">
            <argument id="shopware.currency.basic_factory" type="service"/>
        </service>

        <service class="Shopware\Currency\Loader\CurrencyDetailLoader" id="shopware.currency.detail_loader">
            <argument id="shopware.currency.detail_factory" type="service"/>
            <argument id="shopware.shop.basic_loader" type="service"/>
        </service>

        <service class="Shopware\Currency\Searcher\CurrencySearcher" id="shopware.currency.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.currency.detail_factory" type="service"/>
            <argument id="shopware.currency.basic_loader" type="service"/>
        </service>

        <service class="Shopware\Currency\Repository\CurrencyRepository" id="shopware.currency.repository">
            <argument id="shopware.currency.detail_loader" type="service"/>
            <argument id="shopware.currency.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.currency.searcher" type="service"/>
            <argument id="shopware.currency.writer" type="service"/>
        </service>

    </services>
</container>