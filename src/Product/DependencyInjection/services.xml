<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Helpers -->
        <service class="Shopware\Category\Gateway\CategoryDenormalization" id="shopware.category.gateway.category_denormalization">
            <argument id="dbal_connection" type="service"/>
        </service>

        <defaults autowire="true" />

        <service class="Shopware\Product\Repository\StorefrontProductRepository" id="shopware.product.storefront_repository">
            <argument id="shopware.product.repository" type="service"/>
            <argument id="shopware.product_price.repository" type="service"/>
            <argument id="cart.price.calculator" type="service" />
        </service>

    </services>
</container>