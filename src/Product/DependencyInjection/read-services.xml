<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Product\Factory\ProductBasicFactory" id="shopware.product.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
            <argument id="shopware.product_manufacturer.basic_factory" type="service"/>
            <argument id="shopware.product_detail.basic_factory" type="service"/>
            <argument id="shopware.tax.basic_factory" type="service"/>
            <argument id="shopware.seo_url.basic_factory" type="service"/>
            <argument id="shopware.price_group.basic_factory" type="service"/>
            <argument id="shopware.customer_group.basic_factory" type="service"/>
            <argument id="shopware.product_listing_price_ro.basic_factory" type="service"/>
        </service>

        <service class="Shopware\Product\Factory\ProductDetailFactory" id="shopware.product.detail_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
            <argument id="shopware.product_media.basic_factory" type="service"/>
            <argument id="shopware.product_detail.basic_factory" type="service"/>
            <argument id="shopware.category.basic_factory" type="service"/>
            <argument id="shopware.product_vote.basic_factory" type="service"/>
            <argument id="shopware.product_vote_average_ro.basic_factory" type="service"/>
            <argument id="shopware.product_manufacturer.basic_factory" type="service"/>
            <argument id="shopware.tax.basic_factory" type="service"/>
            <argument id="shopware.seo_url.basic_factory" type="service"/>
            <argument id="shopware.price_group.basic_factory" type="service"/>
            <argument id="shopware.customer_group.basic_factory" type="service"/>
            <argument id="shopware.product_listing_price_ro.basic_factory" type="service"/>
        </service>


        <service class="Shopware\Product\Controller\ProductController" id="shopware.product.api_controller">
            <argument id="shopware.product.repository" type="service"/>
        </service>
        

        <service class="Shopware\Product\Writer\ProductWriter" id="shopware.product.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\Product\Reader\ProductBasicReader" id="shopware.product.basic_reader">
            <argument id="shopware.product.basic_factory" type="service"/>
            <argument id="shopware.product_detail.basic_reader" type="service"/>
            <argument id="shopware.customer_group.basic_reader" type="service"/>
            <argument id="shopware.product_listing_price_ro.searcher" type="service"/>
        </service>

        <service class="Shopware\Product\Reader\ProductDetailReader" id="shopware.product.detail_reader">
            <argument id="shopware.product.detail_factory" type="service"/>
            <argument id="shopware.product_detail.basic_reader" type="service"/>
            <argument id="shopware.customer_group.basic_reader" type="service"/>
            <argument id="shopware.product_listing_price_ro.searcher" type="service"/>
            <argument id="shopware.product_media.searcher" type="service"/>
            <argument id="shopware.product_detail.searcher" type="service"/>
            <argument id="shopware.category.basic_reader" type="service"/>
            <argument id="shopware.product_vote.searcher" type="service"/>
            <argument id="shopware.product_vote_average_ro.searcher" type="service"/>
        </service>

        <service class="Shopware\Product\Searcher\ProductSearcher" id="shopware.product.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.product.detail_factory" type="service"/>
            <argument id="shopware.product.basic_reader" type="service"/>
        </service>

        <service class="Shopware\Product\Repository\ProductRepository" id="shopware.product.repository">
            <argument id="shopware.product.detail_reader" type="service"/>
            <argument id="shopware.product.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.product.searcher" type="service"/>
            <argument id="shopware.product.writer" type="service"/>
        </service>

    </services>
</container>
