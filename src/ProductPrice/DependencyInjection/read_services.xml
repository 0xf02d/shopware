<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\ProductPrice\Factory\ProductPriceBasicFactory" id="shopware.product_price.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>


        <service class="Shopware\ProductPrice\Controller\ProductPriceController" id="shopware.product_price.api_controller">
            <argument id="shopware.product_price.repository" type="service"/>
        </service>
        

        <service class="Shopware\ProductPrice\Writer\ProductPriceWriter" id="shopware.product_price.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\ProductPrice\Loader\ProductPriceBasicLoader" id="shopware.product_price.basic_loader">
            <argument id="shopware.product_price.basic_factory" type="service"/>
        </service>

        <service class="Shopware\ProductPrice\Searcher\ProductPriceSearcher" id="shopware.product_price.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.product_price.basic_factory" type="service"/>
            <argument id="shopware.product_price.basic_loader" type="service"/>
        </service>

        <service class="Shopware\ProductPrice\Repository\ProductPriceRepository" id="shopware.product_price.repository">
            <argument id="shopware.product_price.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.product_price.searcher" type="service"/>
            <argument id="shopware.product_price.writer" type="service"/>
        </service>

    </services>
</container>