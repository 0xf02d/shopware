<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\AreaCountryState\Factory\AreaCountryStateBasicFactory" id="shopware.area_country_state.basic_factory">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.extension.registry" />
        </service>


        <service class="Shopware\AreaCountryState\Controller\AreaCountryStateController" id="shopware.area_country_state.api_controller">
            <argument id="shopware.area_country_state.repository" type="service"/>
        </service>
        

        <service class="Shopware\AreaCountryState\Writer\AreaCountryStateWriter" id="shopware.area_country_state.writer">
            <argument type="service" id="shopware.framework.write.field_aware.default_extender" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="shopware.framework.write.writer" />
        </service>
        
        <service class="Shopware\AreaCountryState\Reader\AreaCountryStateBasicReader" id="shopware.area_country_state.basic_reader">
            <argument id="shopware.area_country_state.basic_factory" type="service"/>
        </service>

        <service class="Shopware\AreaCountryState\Searcher\AreaCountryStateSearcher" id="shopware.area_country_state.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.search.sql_parser" type="service"/>
            <argument id="shopware.area_country_state.basic_factory" type="service"/>
            <argument id="shopware.area_country_state.basic_reader" type="service"/>
        </service>

        <service class="Shopware\AreaCountryState\Repository\AreaCountryStateRepository" id="shopware.area_country_state.repository">
            <argument id="shopware.area_country_state.basic_reader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.area_country_state.searcher" type="service"/>
            <argument id="shopware.area_country_state.writer" type="service"/>
            <tag name="shopware.repository" />
        </service>

    </services>
</container>
