<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\AreaCountryState\Reader\AreaCountryStateBasicHydrator"
                 id="shopware.area_country_state.reader.basic_hydrator">

        </service>

        <service class="Shopware\AreaCountryState\Reader\AreaCountryStateBasicReader"
                 id="shopware.area_country_state.reader.basic_reader">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.area_country_state.reader.basic_hydrator" type="service"/>
        </service>

        <service class="Shopware\AreaCountryState\Loader\AreaCountryStateBasicLoader"
                 id="shopware.area_country_state.loader.basic_loader">
            <argument type="service" id="shopware.area_country_state.reader.basic_reader"/>

        </service>

        <service class="Shopware\AreaCountryState\Searcher\AreaCountryStateSearcher"
                 id="shopware.area_country_state.searcher">
            <argument id="dbal_connection" type="service"/>
            <argument type="collection">

            </argument>
            <argument id="shopware.area_country_state.reader.basic_hydrator" type="service"/>
        </service>

        <service class="Shopware\AreaCountryState\Writer\AreaCountryStateWriter"
                 id="shopware.area_country_state.writer.writer"/>

        <service class="Shopware\AreaCountryState\AreaCountryStateRepository"
                 id="shopware.area_country_state.repository">
            <argument id="shopware.area_country_state.loader.basic_loader" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="shopware.area_country_state.searcher" type="service"/>
            <argument id="shopware.area_country_state.writer.writer" type="service"/>

        </service>

    </services>
</container>