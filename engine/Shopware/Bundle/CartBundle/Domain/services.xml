<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cart.price.rounding.precision">2</parameter>
    </parameters>

    <services>

        <!-- price calculation -->
        <service id="cart.price.amount_calculator" class="Shopware\Bundle\CartBundle\Domain\Price\AmountCalculator" >
            <argument type="service" id="cart.tax.detector" />
            <argument type="service" id="cart.price.rounding" />
            <argument type="service" id="cart.tax.amount_calculator" />
        </service>

        <service id="cart.price.rounding" class="Shopware\Bundle\CartBundle\Domain\Price\PriceRounding">
            <argument>%cart.price.rounding.precision%</argument>
        </service>

        <service id="cart.price.calculator" class="Shopware\Bundle\CartBundle\Domain\Price\PriceCalculator">
            <argument type="service" id="cart.tax.calculator" />
            <argument type="service" id="cart.price.rounding" />
            <argument type="service" id="cart.tax.detector" />
        </service>

        <service id="cart.price.percentage_calculator" class="Shopware\Bundle\CartBundle\Domain\Price\PercentagePriceCalculator">
            <argument type="service" id="cart.price.rounding"/>
            <argument type="service" id="cart.price.calculator"/>
            <argument type="service" id="cart.tax.percentage_rule_builder"/>
        </service>

        <!-- tax calculation -->
        <service id="cart.tax.percentage_rule_builder" class="Shopware\Bundle\CartBundle\Domain\Tax\PercentageTaxRuleBuilder" />

        <service id="cart.tax.detector" class="Shopware\Bundle\CartBundle\Domain\Tax\TaxDetector" />

        <service id="cart.tax.calculator" class="Shopware\Bundle\CartBundle\Domain\Tax\TaxCalculator" >
            <argument type="service" id="cart.price.rounding" />
            <argument type="collection" />
        </service>

        <service id="cart.tax.rule_calculator" class="Shopware\Bundle\CartBundle\Domain\Tax\TaxRuleCalculator">
            <argument type="service" id="cart.price.rounding" />
            <tag name="cart.tax.rule_calculator" />
        </service>

        <service id="cart.tax.percentage_rule_calculator" class="Shopware\Bundle\CartBundle\Domain\Tax\PercentageTaxRuleCalculator">
            <argument type="service" id="cart.tax.rule_calculator" />
            <tag name="cart.tax.rule_calculator" />
        </service>

        <service id="cart.tax.amount_calculator" class="Shopware\Bundle\CartBundle\Domain\Tax\TaxAmountCalculator" >
            <argument type="service" id="cart.tax.percentage_rule_builder" />
            <argument type="service" id="cart.tax.calculator" />
            <argument type="service" id="cart.tax.detector" />
        </service>


        <service id="cart.calculator" class="Shopware\Bundle\CartBundle\Domain\Cart\CartCalculator">
            <!--cart processors-->
            <argument type="collection" />

            <!--cart collectors-->
            <argument type="collection" />

            <!--cart validators-->
            <argument type="collection" />

            <argument type="service" id="cart.calculated_cart_generator" />
        </service>

        <service id="cart.calculated_cart_generator" class="Shopware\Bundle\CartBundle\Domain\Cart\CalculatedCartGenerator">
            <argument type="service" id="cart.price.amount_calculator" />
        </service>

        <service id="cart.product.calculator" class="Shopware\Bundle\CartBundle\Domain\Product\ProductCalculator">
            <argument id="cart.price.calculator" type="service"/>
        </service>

        <service id="cart.delivery.stock_separator" class="Shopware\Bundle\CartBundle\Domain\Delivery\StockDeliverySeparator">
            <argument type="service" id="cart.price.calculator" />
        </service>

        <service id="cart.delivery.calculator" class="Shopware\Bundle\CartBundle\Domain\Delivery\DeliveryCalculator">
            <argument id="dbal_connection" type="service"/>
            <argument id="cart.price.calculator" type="service"/>
            <argument id="cart.tax.percentage_rule_builder" type="service"/>
        </service>


        <!--processors-->
        <service id="cart.product.processor" class="Shopware\Bundle\CartBundle\Domain\Product\ProductProcessor">
            <argument type="service" id="cart.product.calculator" />
            <tag name="cart.processor" priority="1000" />
        </service>

        <service id="cart.voucher.processor" class="Shopware\Bundle\CartBundle\Domain\Voucher\VoucherProcessor" >
            <argument id="cart.price.percentage_calculator" type="service"/>
            <argument id="cart.price.calculator" type="service"/>
            <argument id="cart.tax.percentage_rule_builder" type="service"/>
            <tag name="cart.processor" priority="800"/>
        </service>

        <service id="cart.dynamic.processor" class="Shopware\Bundle\CartBundle\Domain\DynamicProcessor">
            <argument id="cart.dynamic.line_item_gateway" type="service"/>
            <argument id="cart.calculated_cart_generator" type="service"/>
            <tag name="cart.processor" priority="600" />
        </service>

        <service id="cart.delivery.separator_processor" class="Shopware\Bundle\CartBundle\Domain\Delivery\DeliverySeparatorProcessor">
            <argument type="service" id="cart.delivery.stock_separator" />
            <tag name="cart.processor" priority="400" />
        </service>

        <service id="cart.delivery.calculator_processor" class="Shopware\Bundle\CartBundle\Domain\Delivery\DeliveryCalculatorProcessor">
            <argument id="cart.delivery.calculator" type="service"/>
            <tag name="cart.processor" priority="200" />
        </service>

        <!-- cart collectors -->
        <service id="cart.product.collector" class="Shopware\Bundle\CartBundle\Domain\Product\ProductCollector">
            <argument id="cart.product.gateway" type="service"/>
            <tag name="cart.collector" priority="1000" />
        </service>

        <service id="cart.voucher.collector" class="Shopware\Bundle\CartBundle\Domain\Voucher\VoucherCollector" >
            <argument id="cart.voucher.gateway" type="service"/>
            <tag name="cart.collector"/>
        </service>


        <!-- cart validators -->
        <!--<service id="cart.payment.validator" class="Shopware\Bundle\CartBundle\Domain\Payment\PaymentValidator">-->
            <!--<tag name="cart.validator" priority="1000" />-->
        <!--</service>-->

        <service id="cart.product.validator" class="Shopware\Bundle\CartBundle\Domain\Product\ProductValidator" >
            <argument id="dbal_connection" type="service"/>
            <tag name="cart.validator" priority="2000"/>
        </service>

        <service id="shopware_bundle_cart.domain_voucher.voucher_validator" class="Shopware\Bundle\CartBundle\Domain\Voucher\VoucherValidator">
            <tag name="cart.validator" priority="1000"/>
        </service>


        <!--requires implementation-->
        <service id="cart.product.gateway" class="Shopware\Bundle\CartBundle\Domain\Product\ProductGateway" />
        <service id="cart.voucher.gateway" class="Shopware\Bundle\CartBundle\Domain\Voucher\VoucherGateway" />
        <service id="cart.dynamic.line_item_gateway" class="Shopware\Bundle\CartBundle\Domain\Dynamic\DynamicLineItemGateway" />
    </services>
</container>
